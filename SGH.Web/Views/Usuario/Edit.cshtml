@model SGHT.Domain.Entities.Usuarios

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="IdUsuario" />
            <input type="hidden" asp-for="FechaCreacion" />
            
            <div class="form-group">
                <label asp-for="NombreCompleto" class="control-label">Full Name</label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Correo" class="control-label">Email</label>
                <input asp-for="Correo" class="form-control" type="email" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Clave" class="control-label">Password</label>
                <input asp-for="Clave" class="form-control" type="password" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="IdRolUsuario" class="control-label">User Role</label>
                <select asp-for="IdRolUsuario" class="form-control" asp-items="@ViewBag.Roles">
                    <option value="">Select a role</option>
                </select>
                <span asp-validation-for="IdRolUsuario" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" @(Model.Estado == true ? "checked" : "") name="Estado" value="true" />
                    Active
                </label>
                <input type="hidden" name="Estado" value="false" />
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
